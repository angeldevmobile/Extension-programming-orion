{
  "$schema": "vscode://schemas/color-theme",
  "name": "Orion Theme",
  "type": "dark",
  "colors": {
    // Editor Base
    "editor.background": "#0f1419",
    "editor.foreground": "#bfdbfe",
    "editorCursor.foreground": "#60a5fa",
    "editor.lineHighlightBackground": "#1e293b",
    "editorLineNumber.foreground": "#6e7681",
    "editorLineNumber.activeForeground": "#c9d1d9",
    "editor.selectionBackground": "#264f78",
    "editor.selectionHighlightBackground": "#264f7850",
    "editor.wordHighlightBackground": "#264f7850",
    "editor.wordHighlightStrongBackground": "#264f7850",
    "editor.findMatchBackground": "#ffd33d44",
    "editor.findMatchHighlightBackground": "#ffd33d22",
    "editor.findRangeHighlightBackground": "#ffd33d22",
    "editorError.foreground": "#ff5370",
    "editorWarning.foreground": "#ffcb6b",
    "editorInfo.foreground": "#58a6ff",
    "editorHint.foreground": "#56d364",

    // Gutter
    "editorGutter.background": "#0d1117",
    "editorGutter.modifiedBackground": "#e3b341",
    "editorGutter.addedBackground": "#56d364",
    "editorGutter.deletedBackground": "#ff5370",

    // Side Bar
    "sideBar.background": "#0d1117",
    "sideBar.foreground": "#c9d1d9",
    "sideBar.border": "#21262d",
    "sideBarTitle.foreground": "#c9d1d9",
    "sideBarSectionHeader.background": "#161b22",
    "sideBarSectionHeader.foreground": "#c9d1d9",

    // Activity Bar
    "activityBar.background": "#0d1117",
    "activityBar.foreground": "#c9d1d9",
    "activityBar.border": "#21262d",
    "activityBar.activeBorder": "#58a6ff",
    "activityBarBadge.background": "#58a6ff",
    "activityBarBadge.foreground": "#0d1117",

    // Status Bar
    "statusBar.background": "#0d1117",
    "statusBar.foreground": "#c9d1d9",
    "statusBar.border": "#21262d",
    "statusBar.debuggingBackground": "#ff7b72",
    "statusBar.debuggingForeground": "#0d1117",
    "statusBar.noFolderBackground": "#0d1117",

    // Title Bar
    "titleBar.activeBackground": "#0d1117",
    "titleBar.activeForeground": "#c9d1d9",
    "titleBar.inactiveBackground": "#0d1117",
    "titleBar.inactiveForeground": "#6e7681",
    "titleBar.border": "#21262d",

    // Tab Bar
    "tab.activeBackground": "#161b22",
    "tab.activeForeground": "#c9d1d9",
    "tab.activeBorder": "#58a6ff",
    "tab.inactiveBackground": "#0d1117",
    "tab.inactiveForeground": "#6e7681",
    "tab.border": "#21262d",
    "tab.hoverBackground": "#161b22",
    "tab.unfocusedActiveForeground": "#8b949e",

    // Panel
    "panel.background": "#0d1117",
    "panel.border": "#21262d",
    "panelTitle.activeBorder": "#58a6ff",
    "panelTitle.activeForeground": "#c9d1d9",
    "panelTitle.inactiveForeground": "#6e7681",

    // Terminal
    "terminal.background": "#0d1117",
    "terminal.foreground": "#c9d1d9",
    "terminal.ansiBlack": "#484f58",
    "terminal.ansiRed": "#ff7b72",
    "terminal.ansiGreen": "#56d364",
    "terminal.ansiYellow": "#e3b341",
    "terminal.ansiBlue": "#58a6ff",
    "terminal.ansiMagenta": "#d2a8ff",
    "terminal.ansiCyan": "#4fd6be",
    "terminal.ansiWhite": "#c9d1d9",
    "terminal.ansiBrightBlack": "#6e7681",
    "terminal.ansiBrightRed": "#ffa198",
    "terminal.ansiBrightGreen": "#56d364",
    "terminal.ansiBrightYellow": "#ffd33d",
    "terminal.ansiBrightBlue": "#79c0ff",
    "terminal.ansiBrightMagenta": "#d2a8ff",
    "terminal.ansiBrightCyan": "#4fd6be",
    "terminal.ansiBrightWhite": "#f0f6fc",

    // Lists & Trees
    "list.activeSelectionBackground": "#264f78",
    "list.activeSelectionForeground": "#c9d1d9",
    "list.hoverBackground": "#161b22",
    "list.inactiveSelectionBackground": "#21262d",
    "list.focusBackground": "#264f78",
    "tree.indentGuidesStroke": "#21262d",

    // Input Controls
    "input.background": "#0d1117",
    "input.foreground": "#c9d1d9",
    "input.border": "#30363d",
    "input.placeholderForeground": "#6e7681",
    "inputOption.activeBorder": "#58a6ff",

    // Buttons
    "button.background": "#238636",
    "button.foreground": "#f0f6fc",
    "button.hoverBackground": "#2ea043",
    "button.secondaryBackground": "#21262d",
    "button.secondaryForeground": "#c9d1d9",

    // Dropdowns
    "dropdown.background": "#161b22",
    "dropdown.foreground": "#c9d1d9",
    "dropdown.border": "#30363d",

    // Scrollbar
    "scrollbarSlider.background": "#6e768166",
    "scrollbarSlider.hoverBackground": "#6e768188",
    "scrollbarSlider.activeBackground": "#6e7681aa",

    // Badges
    "badge.background": "#1f6feb",
    "badge.foreground": "#f0f6fc",

    // Progress Bar
    "progressBar.background": "#58a6ff",

    // Bracket Match
    "editorBracketMatch.background": "#264f7844",
    "editorBracketMatch.border": "#58a6ff"
  },
  "tokenColors": [
    // Generic syntax highlighting (for all languages)
    {
      "scope": ["keyword", "keyword.control", "keyword.control.orion"],
      "settings": { "foreground": "#ff7b72", "fontStyle": "bold" }
    },
    {
      "scope": ["keyword.other", "keyword.declaration", "keyword.declaration.orion"],
      "settings": { "foreground": "#d2a8ff", "fontStyle": "bold" }
    },
    {
      "scope": ["storage.modifier", "storage.modifier.orion"],
      "settings": { "foreground": "#79c0ff" }
    },
    {
      "scope": ["storage.type", "storage.type.orion"],
      "settings": { "foreground": "#ffa657" }
    },
    {
      "scope": ["constant.language.boolean", "constant.language.boolean.orion"],
      "settings": { "foreground": "#56d364", "fontStyle": "italic" }
    },
    {
      "scope": ["constant.language.null", "constant.language.null.orion"],
      "settings": { "foreground": "#ff7b72", "fontStyle": "italic" }
    },
    {
      "scope": ["string", "string.quoted", "string.quoted.double", "string.quoted.single", "string.quoted.double.orion", "string.quoted.single.orion"],
      "settings": { "foreground": "#a5d6ff" }
    },
    {
      "scope": ["string.template", "string.template.orion"],
      "settings": { "foreground": "#96d0ff" }
    },
    {
      "scope": ["variable.other.readwrite", "variable.interpolation", "variable.interpolation.orion"],
      "settings": { "foreground": "#ffb86c", "fontStyle": "italic" }
    },
    {
      "scope": ["comment", "comment.line", "comment.block", "comment.line.double-dash.orion", "comment.block.orion", "comment.documentation.orion"],
      "settings": { "foreground": "#8b949e", "fontStyle": "italic" }
    },
    {
      "scope": ["constant.numeric", "constant.numeric.integer", "constant.numeric.float", "constant.numeric.orion", "constant.numeric.integer.orion", "constant.numeric.float.orion"],
      "settings": { "foreground": "#f78c6c" }
    },
    {
      "scope": ["entity.name.function", "entity.name.function.orion"],
      "settings": { "foreground": "#d2a8ff" }
    },
    {
      "scope": ["entity.name.class", "entity.name.type.class", "entity.name.class.orion"],
      "settings": { "foreground": "#ffa657", "fontStyle": "bold" }
    },
    {
      "scope": ["entity.name.interface", "entity.name.interface.orion"],
      "settings": { "foreground": "#79c0ff", "fontStyle": "italic" }
    },
    {
      "scope": ["entity.name.enum", "entity.name.enum.orion"],
      "settings": { "foreground": "#56d364", "fontStyle": "bold" }
    },
    {
      "scope": ["support.function", "support.function.builtin", "support.function.builtin.orion"],
      "settings": { "foreground": "#4fd6be" }
    },
    {
      "scope": ["keyword.operator", "keyword.operator.orion"],
      "settings": { "foreground": "#ffb86c" }
    },
    {
      "scope": ["keyword.operator.assignment", "keyword.operator.assignment.orion"],
      "settings": { "foreground": "#ff7b72" }
    },
    {
      "scope": ["keyword.operator.comparison", "keyword.operator.comparison.orion"],
      "settings": { "foreground": "#58a6ff" }
    },
    {
      "scope": ["keyword.operator.logical", "keyword.operator.logical.orion"],
      "settings": { "foreground": "#d2a8ff" }
    },
    {
      "scope": ["entity.name.tag", "entity.name.tag.orion"],
      "settings": { "foreground": "#7ee787" }
    },
    {
      "scope": ["entity.other.attribute-name", "entity.other.attribute-name.orion"],
      "settings": { "foreground": "#79c0ff" }
    },
    {
      "scope": ["variable", "variable.other", "variable.other.orion"],
      "settings": { "foreground": "#c9d1d9" }
    },
    {
      "scope": ["variable.parameter", "variable.parameter.orion"],
      "settings": { "foreground": "#ffa657", "fontStyle": "italic" }
    },
    {
      "scope": ["variable.other.constant", "variable.other.constant.orion"],
      "settings": { "foreground": "#79c0ff", "fontStyle": "bold" }
    },
    {
      "scope": ["keyword.control.import", "keyword.import", "keyword.import.orion"],
      "settings": { "foreground": "#ff7b72", "fontStyle": "bold" }
    },
    {
      "scope": ["entity.name.namespace", "entity.name.module", "entity.name.module.orion"],
      "settings": { "foreground": "#4fd6be", "fontStyle": "italic" }
    },
    {
      "scope": ["punctuation.definition.string", "punctuation.definition.string.orion"],
      "settings": { "foreground": "#a5d6ff" }
    },
    {
      "scope": ["punctuation.separator", "punctuation.separator.orion"],
      "settings": { "foreground": "#8b949e" }
    },
    {
      "scope": ["punctuation.terminator", "punctuation.terminator.orion"],
      "settings": { "foreground": "#8b949e" }
    },
    {
      "scope": ["meta.brace", "punctuation.section.brackets", "punctuation.section.braces", "punctuation.section.parens", "meta.brace.round.orion", "meta.brace.square.orion", "meta.brace.curly.orion"],
      "settings": { "foreground": "#c9d1d9" }
    },
    {
      "scope": ["support.type", "support.type.orion"],
      "settings": { "foreground": "#79c0ff" }
    },
    {
      "scope": ["support.class", "support.class.orion"],
      "settings": { "foreground": "#ffa657" }
    },
    // JSON specific highlighting
    {
      "scope": ["support.type.property-name.json"],
      "settings": { "foreground": "#79c0ff" }
    },
    {
      "scope": ["meta.structure.dictionary.value.json"],
      "settings": { "foreground": "#a5d6ff" }
    },
    // JavaScript/TypeScript specific
    {
      "scope": ["variable.other.readwrite.js", "variable.other.readwrite.ts"],
      "settings": { "foreground": "#c9d1d9" }
    },
    {
      "scope": ["support.type.primitive"],
      "settings": { "foreground": "#79c0ff" }
    }
  ]
}
