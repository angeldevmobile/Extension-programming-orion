{
    "comments": {
        "lineComment": "--"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "'", "close": "'", "notIn": ["string", "comment"] }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^.*\\{[^}\"']*$|^.*\\([^)\"']*$|^.*(if|else|for|while|match|fn).*:?\\s*$",
        "decreaseIndentPattern": "^\\s*\\}|^\\s*\\)|^\\s*(else|}).*$"
    },
    "wordPattern": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
    "folding": {
        "markers": {
            "start": "^\\s*--\\s*#region",
            "end": "^\\s*--\\s*#endregion"
        }
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*--.*$",
            "action": {
                "indent": "none",
                "appendText": "-- "
            }
        },
        {
            "beforeText": "\\{\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "\\{\\s*$",
            "afterText": "^\\s*\\}",
            "action": {
                "indent": "indentOutdent"
            }
        }
    ],
    "colorizedBracketPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ]
}